<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="PostMapper">   
  
	
	<select id="PostList" parameterType="string" resultType="PostDTO">
       select pNum,pCategory,pTitle,pContent,pPrice,pImage,pHit,pDate
       from post
	</select>	
	
	<select id="getPostDetailByPNum" parameterType="String" resultType="HashMap">
		select username,addr,pnum,ptitle,pCategory,pContent,pPrice,pImage,pHit,pDate 
		from member m Join post p on m.userid = p.userid
		WHERE pnum=${pNum};
	</select>
</mapper>